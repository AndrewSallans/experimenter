<div class="col-md-12 well">
	<div class="row table-block">
		<div class="col-xs-8">
			<strong>{{experiment.title}}</strong>
		</div>
		<div class="col-xs-2 text-center">
			<strong>{{experiment.beginDate}}</strong>
		</div>
		<div class="col-xs-2 text-center">
			<strong>{{experiment.endDate}}</strong>
		</div>
	</div>
	<div class="row table-block">
		<div class="col-xs-12">
			{{experiment.description}}
		</div>
	</div>
	<div class="row table-block">
		<div class="col-xs-3">
			<strong>Status: </strong>{{experiment.active}}
		</div>
		<div class="col-xs-3">
			<strong>Last Edited: </strong>{{experiment.lastEdited}}
		</div>
	</div>
</div>
