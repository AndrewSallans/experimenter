{
    "schema": {
        "id": "account",
        "properties": {
            "password": {
                "id": "password",
                "pattern": "^\\$2b\\$1[0-3]\\$\\S{53}$",
                "type": "string"
            },
            "sessions": {
                "id": "sessions",
                "items": {
                    "type": "string"
                },
                "type": "array",
                "uniqueItems": true
            },
            "username": {
                "id": "username",
                "type": "string"
            }
        },
        "required": [
            "password"
        ],
        "type": "object"
    },
    "type": "jsonschema"
}