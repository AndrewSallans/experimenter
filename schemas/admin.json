{
    "type": "jsonschema",
    "schema": {
        "id": "admin",
        "type": "object",
        "properties": {
            "id": {
                "id": "id",
                "type": "string"
            },
            "username": {
                "id": "username",
                "type": "string"
            },
            "password": {
                "id": "password",
                "type": "string",
                "pattern": "^$2b$1[0-3]$S{53}$"
            },
            "firstName": {
                "id": "firstName",
                "type": "string",
                "pattern": "^(?:[w.]){3,60}"
            },
            "lastName": {
                "id": "lastName",
                "type": "string",
                "pattern": "^(?:[w.]){3,60}"
            },
            "experiments": {
                "id": "experiments",
                "type": "array",
                "items": {
                    "type": "string",
                    "pattern": "[w]+.[w]+.[w]+"
                },
                "uniqueItems": true
            }
        },
        "required": [
            "username",
            "password"
        ],
        "additionalProperties": false
    }
}